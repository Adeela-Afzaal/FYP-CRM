@page "/forgot-password"
@using System.ComponentModel.DataAnnotations

<div class="d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0">
        <div class="card-body p-5">
            <h3 class="text-center mb-4 p-3 fancy-heading">
                Forgot Password
            </h3>
            <p class="text-center text-muted mb-4">
                Enter your email address, and we'll send you a link to reset your password.
            </p>

            <EditForm Model="@forgotPasswordModel" OnValidSubmit="@HandleForgotPassword">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <!-- Email Input -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <InputText id="email"
                               class="form-control shadow-sm"
                               @bind-Value="forgotPasswordModel.Email"
                               placeholder="Enter your email" />
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn gradient-btn-light w-100 rounded-pill shadow-sm mt-3">
                    Send Reset Link
                </button>
            </EditForm>

            <!-- Back to Login -->
            <div class="text-center mt-4">
                <a href="/login" class="text-decoration-none text-primary">
                    Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: linear-gradient(to right, #ffffff, #ffffff); /* White background for the card */
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        border-radius: 15px;
    }

    .fancy-heading {
        font-family: 'Montserrat', sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(to right, #E0F7FA, #E6E6FA);
        -webkit-background-clip: text;
        color: transparent;
        text-align: center;
    }

    .btn {
        font-size: 1rem;
        font-weight: bold;
    }

    .gradient-btn-light {
        background: linear-gradient(to right, #fbc2eb, #a6c1ee); /* Pink to light blue gradient */
        color: white;
        border: none;
    }

    .gradient-btn-light:hover {
        background: linear-gradient(to right, #a6c1ee, #fbc2eb); /* Reverse gradient on hover */
        color: white;
    }

    input {
        font-size: 1rem;
        padding: 0.8rem;
    }

    .text-muted {
        font-size: 0.9rem;
    }
</style>

@code {
    private ForgotPasswordModel forgotPasswordModel = new ForgotPasswordModel();

    private void HandleForgotPassword()
    {
        // UI-only; backend logic would handle sending the reset link
    }

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = "";
    }
}
